<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/droidpulse">

    <Button android:id="@+id/welcome_aboutbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="5dp"
        android:text="@string/aboutbutton"
        android:textSize="8pt"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/robot_prompt"
        android:textColor="#000000"
        android:textSize="9pt"/>
        
    <Spinner 
        android:id="@+id/robot_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:prompt="@string/robot_prompt"/>
    
    <Button android:id="@+id/welcome_photobutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="12dp"
        android:text="@string/photobutton"
        android:textSize="8pt"/>
    
</LinearLayout>